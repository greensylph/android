<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@id/action_bar" android:layout_width="fill_parent" android:layout_height="@dimen/action_bar_height"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="horizontal" android:id="@id/action_bar" android:layout_width="fill_parent" android:layout_height="@dimen/action_bar_height">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/action_bar_left" />
        <FrameLayout android:background="@drawable/action_bar_bg" android:layout_width="0.0px" android:layout_height="wrap_content" android:layout_weight="1.0" />
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/action_bar_right" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="@dimen/action_bar_height">
        <LinearLayout android:layout_width="0.0px" android:layout_height="fill_parent" android:layout_weight="1.0">
            <ImageView android:layout_gravity="center" android:id="@id/action_bar_button_back" android:background="@drawable/action_bar_left_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/action_bar_glyph_back" />
            <com.instagram.android.widget.FreightSanBoldSCTextView android:textSize="@dimen/action_bar_title" android:textColor="@color/action_bar_title_text" android:ellipsize="end" android:layout_gravity="center" android:id="@id/action_bar_textview_title" android:paddingLeft="@dimen/action_bar_title_left_padding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Title" android:lines="1" android:shadowColor="@color/action_bar_title_shadow" android:shadowDx="0.0" android:shadowDy="2.5" android:shadowRadius="1.0" android:layout_weight="0.0" />
            <FrameLayout android:layout_gravity="center_vertical" android:id="@id/action_bar_textview_custom_title_container" android:layout_width="0.0px" android:layout_height="fill_parent" android:layout_weight="1.0" />
        </LinearLayout>
        <com.instagram.android.widget.RefreshButton android:id="@id/action_bar_button_refresh" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    </LinearLayout>
</FrameLayout>
