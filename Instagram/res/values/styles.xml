<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="InstagramTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:buttonStyleToggle">@style/IgToggle</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:checkboxStyle">@style/IgTextboxStyle</item>
        <item name="android:editTextStyle">@style/IgEditTextStyle</item>
        <item name="android:progressBarStyleHorizontal">@style/IgImageLoadingBarHorizontal</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:textColorLink">@color/link_color</item>
        <item name="android:soundEffectsEnabled">false</item>
        <item name="android:dialogTheme">@style/IgDialog</item>
        <item name="actionbarCompatProgressIndicatorStyle">@style/ActionBarCompatProgressIndicator</item>
    </style>
    <style name="IgEditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/input_standalone</item>
    </style>
    <style name="TextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorLink">@color/link_color</item>
    </style>
    <style name="ActionBarCompatProgressIndicator" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminate">true</item>
    </style>
    <style name="IgToggle" parent="@android:style/Widget.Button.Toggle">
        <item name="android:background">@drawable/checkbox</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
    </style>
    <style name="IgTextboxStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="IgDialog" parent="@android:style/Theme.Dialog">
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/animationDialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>
    <style name="buttonBarButtonStyle">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_large_blue_bg</item>
        <item name="android:minWidth">100.0dip</item>
        <item name="android:shadowColor">@color/text_shadow_blue_button</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>
    <style name="dialogText">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/text_dialog_message</item>
        <item name="android:shadowColor">@color/text_dialog_message_shadow</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>
    <style name="animationDialog">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
    <style name="SignUpTextStyle">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/text_signup</item>
    </style>
    <style name="IgFollowButtonStyle">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@drawable/follow_button_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/profile_button_follow</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingTop">2.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:paddingBottom">2.0dip</item>
    </style>
    <style name="IgGreenButtonStyle">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@drawable/follow_button_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_small_green_bg</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingTop">2.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:paddingBottom">2.0dip</item>
    </style>
    <style name="IgGrayButtonStyle">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_small_gray_bg</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingTop">2.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:paddingBottom">2.0dip</item>
    </style>
    <style name="IgProgressBarHorizontal">
        <item name="android:maxHeight">20.0dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/upload_progress_progress_repeat_horizontal0</item>
        <item name="android:minHeight">20.0dip</item>
    </style>
    <style name="IgImageLoadingBarHorizontal">
        <item name="android:maxHeight">20.0dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
        <item name="android:indeterminateDuration">3500</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:minHeight">20.0dip</item>
    </style>
</resources>
